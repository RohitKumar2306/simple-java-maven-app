pipeline {
  agent any

  stages {
    stage("Validate Application") {
      steps {
        echo "This is build stage"
        sh "mvn validate"
      }
    }

    stage("Compile the Application") {
      steps {
        echo "This is packaging stage"
        sh "mvn clean package"
      }
    }

    stage("Deploy the Application") {
      steps {
        echo "This is packaging stage"
        sh "mvn deploy"
      }
    }
  }
}